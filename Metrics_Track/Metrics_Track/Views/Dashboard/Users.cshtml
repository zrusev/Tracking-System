@model CountryViewModel

@{
    ViewBag.Title = $"{Model.CountryList.FirstOrDefault().Country}";
    Layout = "_Layout";
}

<div class="col-lg-4 dashboard">
    <div class="container-fluid">
        <div class="panel-group" id="country">
            @foreach (var country in Model.CountryList)
            {
                <div class="panel panel-default">
                    <div class="panel-heading" style="background-color:#D1D0DE">
                        <h4 class="panel-title">
                            <a class="list-group-item panel-height" data-toggle="collapse" data-target="#country-@country.ID_Country" data-parent="#country" data-id="@country.ID_Country" style="color:white; background-color:#00A4E4; font-weight:bold; cursor:default">@country.Country</a>
                        </h4>
                    </div>
                    <div id="country-@country.ID_Country" class="panel-collapse collapse">
                        <div class="panel-body" style="background-color:#D1D0DE">
                            <div class="
                                 " id="process-@country.ID_Country">
                                <div class="panel panel-default">
                                    @foreach (var process in country.ProcessList)
                                    {
                                        <div class="panel">
                                            <a class="list-group-item small" data-toggle="collapse" data-target="#process-@process.ID_Process" data-parent="#process-@country.ID_Country" data-id="@process.ID_Process" style="color:white; background-color:#00A4E4; padding-bottom: 5px; padding-top: 5px; cursor:default">@process.Process</a>
                                        </div>

                                        <div class="panel-collapse collapse" id="process-@process.ID_Process">
                                            <div class="panel-body">
                                                <div class="row" style="text-align:center">
                                                    <div class="col-sm-4">
                                                        <h6>Line of business</h6>
                                                        <div class="btn-group-vertical center-block" data-toggle="buttons" id="Lob">
                                                            @foreach (var lob in process.LobList)
                                                            {
                                                                <label class="btn btn-default form-check-label" style="font-size:10px; cursor:default">
                                                                    <input class="form-check-label" type="radio" autocomplete="off" id="@lob.ID_Lob">@lob.Lob
                                                                </label>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <h6>Activity</h6>
                                                        <div class="btn-group-vertical center-block" data-toggle="buttons" id="Activity">
                                                            @foreach (var activity in process.ActivityList)
                                                            {
                                                                <label class="btn btn-default form-check-label" style="font-size:10px; cursor:default">
                                                                    <input class="form-check-label" type="radio" autocomplete="off" id="@activity.ID_Activity">@activity.Activity
                                                                </label>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <h6>Status</h6>
                                                        <div class="btn-group-vertical center-block" data-toggle="buttons" id="Status">
                                                            @foreach (var status in process.StatusList)
                                                            {
                                                                <label class="btn btn-default form-check-label" style="font-size:10px; cursor:default">
                                                                    <input class="form-check-label" type="radio" autocomplete="off" id="@status.ID_Status">@status.Status
                                                                </label>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="col-lg-8 dashboard">
    <div class="affix">
        <div class="col-lg-6">
            <div class="panel-group">
                <div class="panel-default">
                    <div class="panel-heading" style="background-color:#D1D0DE">
                        <div class="panel-title" style="background-color:#00A4E4; color:white; text-align:center; font-weight:bold">
                            <span id="currentstatus">
                                Active
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <label>Update status</label>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <select id="useractivity" style="width:100%; height:30px">
                        @foreach (var status in Model.MiningList)
                        {
                            <option id=@status.IdMining value=@status.State>@status.State</option>
                        }
                    </select>
                    <hr />
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <form id="submittranform" method="post">
                        <div class="form-row">
                            <div class="form-group-sm">
                                <span asp-validation-for="Transaction.IdCountry" class="text-danger"></span>
                                <input asp-for="Transaction.IdCountry" type="hidden" name="CountrySelection" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group-sm">
                                <span asp-validation-for="Transaction.IdProcess" class="text-danger"></span>
                                <input asp-for="Transaction.IdProcess" type="hidden" name="ProcessSelection" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group-sm">
                                <span asp-validation-for="Transaction.Process" class="text-danger"></span>
                                <input asp-for="Transaction.Process" type="hidden" name="ProcessName" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group-sm">
                                <span asp-validation-for="Transaction.IdActivity" class="text-danger"></span>
                                <input asp-for="Transaction.IdActivity" type="hidden" name="ActivitySelection" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group-sm">
                                <span asp-validation-for="Transaction.Activity" class="text-danger"></span>
                                <input asp-for="Transaction.Activity" type="hidden" name="ActivityName" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group-sm">
                                <span asp-validation-for="Transaction.IdLob" class="text-danger"></span>
                                <input asp-for="Transaction.IdLob" type="hidden" name="LobSelection" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group-sm">
                                <span asp-validation-for="Transaction.Lob" class="text-danger"></span>
                                <input asp-for="Transaction.Lob" type="hidden" name="LobName" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group-sm">
                                <span asp-validation-for="Transaction.IdStatus" class="text-danger"></span>
                                <input asp-for="Transaction.IdStatus" type="hidden" name="StatusSelection" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <span asp-validation-for="Transaction.Status" class="text-danger"></span>
                                <input asp-for="Transaction.Status" type="hidden" name="StatusName" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Transaction.IdNumber">Policy Number</label>
                                <span asp-validation-for="Transaction.IdNumber" class="text-danger"></span>
                                <input asp-for="Transaction.IdNumber" class="form-control" id="policynumber1" placeholder="Enter policy number">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Transaction.Premium">Premium</label>
                                <span asp-validation-for="Transaction.Premium" class="text-danger"></span>
                                <input asp-for="Transaction.Premium" class="form-control" id="amount1" placeholder="Enter amount">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Transaction.ReceivedDate">Received Date</label>
                                <span asp-validation-for="Transaction.ReceivedDate" class="text-danger"></span>
                                <div class='input-group date' id='datetimepicker1'>
                                    <input asp-for="Transaction.ReceivedDate" class="form-control form-date" placeholder="Enter received date" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Transaction.Comment">Comment</label>
                                <span asp-validation-for="Transaction.Comment" class="text-danger"></span>
                                <input asp-for="Transaction.Comment" class="form-control" id="comment1" placeholder="Enter comment">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Transaction.InceptionDate">Inception Date</label>
                                <span asp-validation-for="Transaction.InceptionDate" class="text-danger"></span>
                                <div class='input-group date' id='datetimepicker2'>
                                    <input asp-for="Transaction.InceptionDate" class="form-control form-date" placeholder="Enter inception date" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Transaction.DateReceived">Bound Date</label>
                                <span asp-validation-for="Transaction.DateReceived" class="text-danger"></span>
                                <div class='input-group date' id='datetimepicker3'>
                                    <input asp-for="Transaction.DateReceived" class="form-control form-date" placeholder="Enter bound date" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="sectionCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Lock sections
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="receivedCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Lock received date
                                </label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Transaction.Priority" class="form-check-input" id="priorityCheck">
                                <label asp-for="Transaction.Priority" class="form-check-label" for="gridCheck">
                                    High priority
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>

        @{ var tempDateDemo = DateTime.Now;}

        <div class="col-lg-6">
            <h4>My previous transaction</h4>
            <table class="table table-bordered table-condensed transaction" id="previousTransactionTable">
                <thead>
                    <tr style="background-color:#D1D0DE">
                        <th class="row-process">Process</th>
                        <th class="row-lob">LOB</th>
                        <th class="row-premium">Premium</th>
                        <th class="row-received">Received Date</th>
                        <th class="row-docId">Doc ID</th>
                        <th class="row-status">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="active">
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>

            <h4>My pending transactions</h4>
            <table class="table table-bordered table-condensed table-hover transaction">
                <thead>
                    <tr style="background-color:#D1D0DE">
                        <th class="row-process">Process</th>
                        <th class="row-lob">LOB</th>
                        <th class="row-premium">Premium</th>
                        <th class="row-received">Received Date</th>
                        <th class="row-docId">Doc ID</th>
                        <th class="row-status">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="active">
                        <td>ProcessName</td>
                        <td>LOBName</td>
                        <td>1234</td>
                        <td>@tempDateDemo</td>
                        <td>123456</td>
                        <td>Completed</td>
                    </tr>
                    <tr>
                        <td>ProcessName</td>
                        <td>LOBName</td>
                        <td>1234</td>
                        <td>@tempDateDemo</td>
                        <td>123456</td>
                        <td>Completed</td>
                    </tr>
                    <tr class="active">
                        <td>ProcessName</td>
                        <td>LOBName</td>
                        <td>1234</td>
                        <td>@tempDateDemo</td>
                        <td>123456</td>
                        <td>Completed</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css">

    <script language="javascript" type="text/javascript">
        $(function () {
            $(function () {
                $('#datetimepicker1').datetimepicker();
                $('#datetimepicker2').datetimepicker();
                $('#datetimepicker3').datetimepicker();
            });
        })
    </script>

    <script src="~/js/site.js"></script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}