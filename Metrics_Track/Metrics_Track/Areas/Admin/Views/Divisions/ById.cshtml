@model DivisionViewModel
@{
    ViewData["Title"] = "ById";
}

<h2>Update Division</h2>

<div class="row">
    <form class="col-lg-4" method="post">
        <div asp-validation-summary="All" style="color:red;"></div>
        <div class="form-group">
            <label asp-for="Division.IdDivision" name="id">ID</label>
            <input asp-for="Division.IdDivision" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Division.Division">Division</label>
            <input asp-for="Division.Division" class="form-control" />
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-sm pull-left" asp-area="Admin" asp-controller="Divisions" asp-action="ById" style="color:white; background-color:#00A4E4;">Update</button>
                <button type="submit" class="btn btn-sm btn-danger pull-right" asp-area="Admin" asp-controller="Divisions" asp-action="RemoveDivision" asp-route-id="@Model.Division.IdDivision">Remove</button>
            </div>
        </div>
    </form>
</div>