@model ActivityViewModel
@{
    ViewData["Title"] = "ById";
}

<h2>Update Activity</h2>

<div class="row">
    <form class="col-lg-4" method="post">
        <div asp-validation-summary="All" style="color:red;"></div>
        <div class="form-group">
            <label asp-for="Activity.IdActivity" name="id">ID</label>
            <input asp-for="Activity.IdActivity" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Activity.Activity">Activity</label>
            <input asp-for="Activity.Activity" class="form-control" />
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-sm pull-left" asp-area="Admin" asp-controller="Activities" asp-action="ById" style="color:white; background-color:#00A4E4;">Update</button>
                <button type="submit" class="btn btn-sm btn-danger pull-right" asp-area="Admin" asp-controller="Activities" asp-action="RemoveActivity" asp-route-id="@Model.Activity.IdActivity">Remove</button>
            </div>
        </div>
    </form>
</div>