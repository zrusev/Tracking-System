@model AddCountryVewModel
@{
    ViewData["Title"] = "Countries Administration";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <form class="col-lg-4" asp-area="Admin" asp-action="AddNewCountryToList">
        <div class="form-group">
            <label asp-for="Country">Country Name</label>
            <input asp-for="Country" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RefSite">Reference site</label>
            <input asp-for="RefSite" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SpphIdCountry">Sapphire ID</label>
            <input asp-for="SpphIdCountry" class="form-control" />
        </div>
        <div class="col-lg-6">
            <button type="submit" class="btn btn-sm pull-left" style="color:white; background-color:#00A4E4;">Add New Country</button>
        </div>
    </form>
</div>