@model CountryViewModel
@{
    ViewData["Title"] = "Countries Administration";
}

<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>
    <div class="col-lg-2">
        <button type="button" class="btn btn-sm pull-left" onclick="location.href='@Url.Action("AddCountry", "Countries")'" style="color:white; background-color:#00A4E4;">Add New</button>
    </div>
</div>
<hr />

<div class="container-fluid">
    <form class="col-lg-4">
        <div class="form-group">
            <label asp-for="CountryList">All Countries</label>
            @Html.ListBoxFor(x => x.IdCountries, Model.CountryList, new { @class = "form-control", @style = "height: 300px;" })
            <small>* Press and hold Ctrl to select multiple countries</small>
        </div>
        <div class="form-group">
            <div class="col-lg-6">
                <button type="submit" class="btn btn-sm btn-default" asp-area="Admin" asp-action="ModifyCountry" style="color:white; background-color:dimgrey;">Modify</button>
            </div>
            <div class="col-lg-6">
                <button type="submit" class="btn btn-sm btn-danger pull-right" asp-area="Admin" asp-action="RemoveCountries">Remove</button>
            </div>
        </div>
    </form>
</div>