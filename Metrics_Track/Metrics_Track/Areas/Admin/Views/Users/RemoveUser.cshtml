@model UserViewModel
@{
    ViewData["Title"] = "User Administration";
}
<h2>@ViewData["Title"]</h2>

<form class="col-lg-4" method="post">
    <div class="form-group">
        <input class="hidden" name="id" value="@ViewData["id"]">
    </div>
    <div class="form-group">
        <p>Would you like to remove relationship for user: <b>@ViewData["user"]<b>?</p>
    </div>
    <div class="form-group">
        <div class="col-lg-3">
            <button type="submit" class="btn btn-sm btn-primary" asp-area="Admin" asp-action="RemoveUserById">Yes</button>
        </div>
        <div class="col-lg-3">
            <button type="submit" class="btn btn-sm btn-danger" asp-area="Admin" asp-action="Index">No</button>
        </div>
    </div>  
</form>