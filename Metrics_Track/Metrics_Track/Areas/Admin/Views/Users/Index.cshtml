@model UserListingsViewModel
@{
    ViewData["Title"] = "User Administration";
}
<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-striped table-condensed" style="font-size:10px;">
    <thead>
        <tr style="color: white; background-color: #00A4E4;">
            <th>
                ID Login
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                E-mail
            </th>
            <th>
                Username
            </th>
            <th>
                Sandbox
            </th>
            <th>
                Countries
            </th>
            <th>
                Teamlead
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
        <tr>
            <th>
                @user.IdLogin
            </th>
            <th>
                @user.FirstName
            </th>
            <th>
                @user.LastName
            </th>
            <th>
                @user.Email
            </th>
            <th>
                @user.Username
            </th>
            <th>
                @user.Sandbox
            </th>
            <th>
                @foreach (var country in user.Countries)
                {
                    @country.Country@((country != user.Countries.Last()) ? "; " : "")
                }     
            </th>
            <th>
                @if (user.IdTeamLead != null)
                {
                    @user.TeamLead
                }
                else
                {
                <form asp-action="AssignToTeamLead" method="post">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="hidden" name="UserId" value="@user.Id" />
                            <select name="TeamLead" asp-items="Model.TeamLeads" class="form-control" style="font-size:10px;"></select>
                        </div>
                        <div class="col-md-4">
                            <input class="btn btn-sm btn-primary" type="submit" value="Assign" />
                        </div>
                    </div>
                </form>
                }
            </th>
        </tr>
        }
    </tbody>
</table>