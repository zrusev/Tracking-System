@model StatusViewModel
@{
    ViewData["Title"] = "ById";
}

<h2>Update Statuses</h2>

<div class="row">
    <form class="col-lg-4" method="post">
        <div asp-validation-summary="All" style="color:red;"></div>
        <div class="form-group">
            <label asp-for="Status.IdStatus" name="id">ID</label>
            <input asp-for="Status.IdStatus" readonly="readonly" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Status.Status">Status</label>
            <input asp-for="Status.Status" class="form-control" />
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-sm pull-left" asp-area="Admin" asp-controller="Statuses" asp-action="ById" style="color:white; background-color:#00A4E4;">Update</button>
                <button type="submit" class="btn btn-sm btn-danger pull-right" asp-area="Admin" asp-controller="Statuses" asp-action="RemoveStatus" asp-route-id="@Model.Status.IdStatus">Remove</button>
            </div>
        </div>
    </form>
</div>