@model AddStatusViewModel
@{
    ViewData["Title"] = "Add Status";
}

<h2>@ViewData["Title"]</h2>
<form class="col-lg-4" asp-area="Admin" asp-action="AddStatus" method="post">
    <div asp-validation-summary="All" style="color:red;"></div>
    <div class="form-group">
        <label asp-for="Status">Division</label>
        <input asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        <div class="col-lg-6">
            <button type="submit" class="btn btn-sm pull-left" style="color:white; background-color:#00A4E4;">Save</button>
        </div>
    </div>
</form>