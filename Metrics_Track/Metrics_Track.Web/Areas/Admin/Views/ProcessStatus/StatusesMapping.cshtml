@model ProcessStatusMappingViewModel
@{
    ViewData["Title"] = "Process to Statuses Administration";
}

<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>
    <div class="col-lg-8">
        <h5>Process name: <b>@Model.SelectedProcess</b></h5>
        Mapped divisions: <b>@Model.IdStatuses.Count()/@Model.Statuses.Count()</b>
        <input type="text" class="pull-right" id="inputName" onkeyup="myFunction('IdStatuses')" placeholder="Search for name..." title="Type in a name" style="width:400px;">
    </div>
    <form class="col-lg-8" method="post">
        <div class="form-group">
            <input asp-for="IdSelectedProcess" class="hidden" name="idProcess" />
            <input asp-for="IdStatuses" class="hidden" name="IdLobs" id="idStatusesHidden"/>
        </div>
        <div class="form-group">
            <label asp-for="Statuses">All Statuses:</label>
            @Html.ListBoxFor(x => x.IdStatuses, Model.Statuses, new { @class = "form-control", @style = "height: 600px;" })
            <small>* Press and hold Ctrl to select multiple divisions</small>
        </div>
        <div class="form-group">
            <div class="col-lg-6">
                <button type="submit" class="btn btn-sm btn-default" asp-area="Admin" asp-action="StatusesMapping" style="color: white; background-color: #00A4E4;">Modify</button>
            </div>
        </div>
    </form>
</div>

@{ await Html.RenderPartialAsync("_FilterScriptsPartial"); }