@model DivisionListViewModel
@{
    ViewData["Title"] = "Divisions Administration";
}
@using X.PagedList.Mvc.Core;
@using X.PagedList;

<div class="container-fluid">
    <h2>@ViewData["Title"]</h2>
    <div class="col-lg-2">
        <button type="button" class="btn btn-sm pull-left" onclick="location.href='@Url.Action("AddDivision", "Divisions")'" style="color:white; background-color:#00A4E4;">Add New</button>
    </div>
</div>
<hr />
<div class="container-fluid">
    <div class="col-lg-3">
        <h5><b>All Divisions</b></h5>
        <table class="table table-bordered table-condensed table-hover transaction">
            <thead>
                <tr style="color: white; background-color: #00A4E4;">
                    <th>Action</th>
                    <th>ID Division</th>
                    <th>Division</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var division in Model.DivisionList)
                {
                    <tr>
                        <td>
                            <button class="btn btn-xs" onclick="location.href='@Url.Action("ById", "Divisions", new { divisionId = division.IdDivision })'" style="color: white; background-color: #00A4E4;">Modify</button>
                        </td>
                        <td>@division.IdDivision</td>
                        <td>@division.Division</td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager((IPagedList)Model.DivisionList, page => Url.Action("Index", new { page }))
    </div>
</div>